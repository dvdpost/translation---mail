<h1>New translation</h1>

<%= form_for( [@mail,@translation] ,:url=>mail_translations_path(@mail,@translation,:page=>@page)) do |f| %>
  <%= f.error_messages if 1== 0 %>
  <p class="mailing_subject">Language : <%= @translation.language.name %></p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject, :size=>'85'%>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :size=> '122x40' %>
  </p>
  <p id="translation_p">
	<%= f.hidden_field :language_id, :value => @translation.language.id %>
	<%= f.submit 'Create' %> - <%= link_to 'Back', mails_path %>
  </p>
  <div id="var">
  <table>
    <tr>
      <td>
        name
      </td>
      <td>
      </td>
      <td>
        description
      </td>
    </tr>  
  <%= render :partial => 'variable', :collection =>  @variables %>
  </table>
  </div>
<% end %>

