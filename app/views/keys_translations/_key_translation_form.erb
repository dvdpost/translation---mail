<%= form_for([@reference,@key_translation],:url=>@path) do |f| %>
	<%= f.error_messages if 1 == 0 %>
	<%= hidden_field_tag :search, @search if @search %>
	<p>
		<%= f.label :value %><br /><br />
		<%= f.text_area :value,:size=> '122x25', :tabindex=> 1 %>	
	</p>
  	<p id ="translation_p">
		<%= f.hidden_field :language_id, :value => @language_id %>
		
    	<%= f.submit 'Validate', :tabindex => 2 %> - <%=link_to 'Back', keys_path( :pagination=>@pagination, :search => @search), :tabindex => 3 %>
  	</p>
<% end %>
